  pod 'AVOSCloudCrashReporting' # 错误报告模块

  pod 'SVProgressHUD'

  pod 'LeanCloudSocial'         
  

  pod 'DateTools', '~> 2.0.0'
  pod 'MLeaksFinder', '~> 0.2.1'

