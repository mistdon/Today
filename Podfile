  pod 'SDViewHelper'
  pod 'HXWeiboPhotoPicker'
  pod 'DateTools', '~> 2.0.0'
  pod 'MLeaksFinder', '~> 0.2.1'
  
  target 'TodayTests' do
      inherit! :search_paths
  end
  target 'TodayUITests' do
      inherit! :search_paths
  end

